<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<img src="/static/assets/img/burger3.png" alt="burger" class="burgerImg" />
		</div>
	</div>
    <br>
    <div class="container">
  <div class="row">
    <div class="col" id="newBurgers">New Burgers</div>
    <div class="col" id="devoured">Devoured</div>
    <div class="w-100"></div>
    <div class="col" >
        {{#each burger_data}}
			  	{{#unless this.devoured}}
                
                      {{this.id}}. {{this.burger_name}}
                      <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
                        <button type="submit" class="btn btn-outline-dark">Devour it!</button>
					</form>     
                    	{{/unless}}
			  {{/each}}     
    </div>
    <div class="col">
         {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}

    </div>

  </div>
    

</div>
<br>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section" id="submit">
            <p>Enter a burger you want to eat Click the "Submit" button.</p>
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <br>
				<button type="submit" class="btn btn-outline-dark" id="text-enter-button">Submit</button>
			</form>
		</div>
	</div>
</div>
